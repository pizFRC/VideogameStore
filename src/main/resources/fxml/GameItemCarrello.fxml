<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<HBox prefHeight="150.0" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.GameCarrelloController">
   <children>
      <ImageView fx:id="imgGame" fitHeight="165.0" fitWidth="122.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin></ImageView>
      <VBox prefHeight="200.0" style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="nomeLabel" text="Nome:" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets left="10.0" top="5.0" />
               </padding>
            </Label>
            <Label fx:id="produttoreLabel" text="Produttore:" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets left="10.0" top="5.0" />
               </padding>
            </Label>
            <Label fx:id="genereLabel" text="Genere:" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets left="10.0" top="5.0" />
               </padding>
            </Label>
            <Label fx:id="etàLabel" text="Età:" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets left="10.0" top="5.0" />
               </padding>
            </Label>
            <Label fx:id="prezzoLabel" text="Prezzo:" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets left="10.0" top="5.0" />
               </padding>
            </Label>
            <Label fx:id="dataLabel" text="Data uscita:" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets left="10.0" top="5.0" />
               </padding>
            </Label>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#deleteGame" prefHeight="34.0" prefWidth="73.0" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" top="5.0" />
               </VBox.margin>
               <graphic>
                  <FontAwesomeIcon fill="RED" iconName="TRASH" size="2em" />
               </graphic>
            </Button>
         </children>
         <HBox.margin>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </VBox>
   </children>
</HBox>
