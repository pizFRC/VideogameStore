               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
            </Label>
            <TextField prefHeight="25.0" prefWidth="50.0" promptText="CVC" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0" VBox.vgrow="ALWAYS">
         <children>
            <Button mnemonicParsing="false" onAction="#annulla" text="Annulla" />
            <Button mnemonicParsing="false" onAction="#confermaAcquisto" text="Conferma" />
         </children>
      </HBox>
   </children>
</VBox>
