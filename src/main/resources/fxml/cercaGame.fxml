<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.CercaGameController">
   <top>
      <VBox prefHeight="102.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <children>
                  <TextField fx:id="titoloField" alignment="CENTER" prefHeight="35.0" promptText="Cerca " HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="10.0" left="50.0" right="50.0" top="15.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="137.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label prefHeight="15.0" prefWidth="77.0" text="Ordina per" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="15.0" />
                     </HBox.margin>
                  </Label>
                  <ChoiceBox fx:id="ordineChoicheBox" prefWidth="150.0" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </ChoiceBox>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Cerca per categoria" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="74.0" prefWidth="580.0" spacing="25.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Button fx:id="categoriaSport" contentDisplay="TOP" mnemonicParsing="false" onAction="#sportPressed" text="Sport" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Button>
                        <Button fx:id="categoriaSparatutto" contentDisplay="TOP" mnemonicParsing="false" onAction="#sparatuttoPressed" text="Sparatutto">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Button>
                        <Button fx:id="categoriaStrategia" contentDisplay="TOP" mnemonicParsing="false" onAction="#strategiaPressed" text="Strategia">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Button>
                        <Button fx:id="categoriaAvventura" contentDisplay="TOP" mnemonicParsing="false" onAction="#avventuraPressed" text="Avventura">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Button>
                        <Button fx:id="resetButton" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#reset">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </top>
   <center>
      <ScrollPane fx:id="scrollPane" BorderPane.alignment="CENTER">
         <content>
            <TilePane fx:id="listaGame" hgap="5.0" tileAlignment="TOP_LEFT" vgap="5.0" />
         </content>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </ScrollPane>
   </center>
</BorderPane>
