<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" prefHeight="355.0" prefWidth="226.0" style="-fx-background-color: #1B262C;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.GameItemController">
   <children>
      <VBox alignment="CENTER" prefHeight="293.0" prefWidth="187.0" spacing="5.0" style="-fx-border-color: white;" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER" prefHeight="104.0" prefWidth="164.0" VBox.vgrow="ALWAYS">
               <children>
                  <ImageView fx:id="copertinaImg" fitHeight="111.0" fitWidth="134.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
            <Label fx:id="nomeLabel" text="Nome:" textFill="WHITE" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="produttoreLabel" text="Produttore:" textFill="WHITE" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="dataLabel" text="Data uscita:" textFill="WHITE" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="0.0" prefWidth="224.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label contentDisplay="RIGHT" text="Prezzo:" textFill="WHITE" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" iconName="EURO" />
                     </graphic>
                  </Label>
                  <Label fx:id="prezzoLabel" alignment="CENTER" contentDisplay="CENTER" text="0" textFill="WHITE" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="0.0" prefWidth="158.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="addCarrelloButton" alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" onAction="#addCarrello" prefHeight="25.0" prefWidth="60.0" textFill="RED" HBox.hgrow="ALWAYS">
                     <graphic>
                        <FontAwesomeIcon iconName="CART_PLUS" size="2em" />
                     </graphic>
                  </Button>
                  <Button fx:id="likeButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#like" prefHeight="25.0" prefWidth="60.0" textFill="RED" HBox.hgrow="ALWAYS">
                     <graphic>
                        <FontAwesomeIcon fill="RED" iconName="HEART" size="2em" />
                     </graphic>
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </VBox>
   </children>
</HBox>
